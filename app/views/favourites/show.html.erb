<div class="page">
<p style="color: green"><%= notice %></p>

<%= render @favourite %>
<p>recipes favourited</p>
<% @favourite.recipes.each do |recipe| %>
  <%= recipe.name %> |
<% end %>

<div>
  <%= link_to "Edit this favourite", edit_favourite_path(@favourite) %> |
  <%= link_to "Back to favourites", favourites_path %>

  <%= button_to "Destroy this favourite", @favourite, method: :delete %>
</div>
</div>
