<div class="recipe-show-container">
  <div class="row">
    <div class="col-3">
      <%= render @recipe %>
    </div>

    <div class="col-6">
      <h2><%= @recipe.name %></h2>
      <p><%= @recipe.description %></p>

      <div class="recipe-information">
        <div>
          <h3>Ingredients</h3>
          <% @recipe.recipe_ingredients.each do |ingredient| %>
            <div class="ingredients-container">
              <p><%= Ingredient.find(ingredient.ingredient_id).name %></p>
              <p><%= ingredient.quantity %></p>
              <p><%= ingredient.unit_of_measure %></p>
            </div>
          <% end %>
        </div>

        <div>
          <h3>Instructions</h3>
          <p class="text"><%= @recipe.instructions %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<h3>Tags</h3>
<% @recipe.tags.each do |tag| %>
  <p><%= tag.name %></p>
<% end %>


<div class="cards">
  <%= link_to recipes_path, class: "btn btn-flat" do %>
    Back to all Recipes
  <% end %>
  <%= link_to edit_recipe_path(@recipe), class: "btn btn-flat" do %>
    Edit recipe
  <% end %>
</div>
