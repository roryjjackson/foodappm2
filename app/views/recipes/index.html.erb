<div class="recipes">
  <p style="color: green"><%= notice %></p>

  <h1>Recipes</h1>

  <div class="recipe-container">
    <% @recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe.id) do %>
        <%= render recipe %>
      <% end %>
    <% end %>
  </div>

  <%= link_to "New recipe", new_recipe_path %>
</div>
