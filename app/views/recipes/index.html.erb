<div class="page">
  <div class="recipes-index">
    <button onclick="window.history.back();" class="btn back-btn">
      <i class="fa-solid fa-arrow-left"></i> Back
    </button>
    <h2>Good morning, <%= current_user.email %></h2>
    <p>
      Please edit your profile
    </p>
    <div class="dashboard-panel utilities-container">
      <div>
        <h3>Most Popular Recipes</h3>
        <p><%= Recipe.all.length %> recipes in total</p>
      </div>
      <div class="recipes-searchbar">
        <%= render partial: 'recipe_search_form' %>
      </div>
    </div>
    <div class="cards">
      <% @recipes.each do |recipe| %>
        <%= render recipe %>
      <% end %>
    </div>
  </div>
</div>
