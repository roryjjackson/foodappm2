<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 form-login">
      <%= simple_form_for(@menu) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description %>

          <div class="field">
            <%= f.input :photo, as: :file %>
          </div>

          <div class="field">
            <%= f.input :days_planned, collection: 1..7 %>
          </div>

          <div class="field">
            <%= f.label :meal_type %><br>
            <%= f.check_box :meal_type, { multiple: true }, "Morning", nil %> Morning
            <%= f.check_box :meal_type, { multiple: true }, "Daytime", nil %> Daytime
            <%= f.check_box :meal_type, { multiple: true }, "Evening", nil %> Evening
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "btn-flat" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
